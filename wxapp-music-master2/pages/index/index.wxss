/**index.wxss**/
.container{
  height: 100%;
  overflow: hidden;
}
/*1*/
.bg{
  position: absolute;
  height: 100%;
  width: 100%;
  z-index: 1;
}
.bg image{
  position: absolute;
  height: 100%;
  width: 100%;
  filter: blur(50rpx);
  z-index:0;
}
/*2*/
.bg-gray{
  height: 100%;
  width: 100%;
  background-color: rgba(54, 43, 41, 0.1);
  z-index:0;

}
/*3*/
.rotate-disk-container{
  position: absolute;
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  z-index: 100;
}
.rotate-disk{
  width: 600rpx;
  height: 600rpx;
  border-radius: 600rpx;
  overflow: hidden;
  border: 20rpx solid rgba(54, 43, 41, 0.2);
}
.poster{
  width: 600rpx;
  height: 600rpx;
}
.rotate-360{
  animation: rotate 10s linear infinite;
}
.rotate-360-paused{
  animation: rotate 10s linear infinite;
  animation-play-state: paused;
}
@keyframes rotate
{
  0%   {transform: rotate(0deg);}
  50% {transform: rotate(180deg);}
  100% {transform: rotate(360deg);}
}
